<!-- Content Row -->
<div class="row">
    <div class="col-xl-12 col-lg-11">
      <br>
      <h3 style="margin-left: 15px;">검색 결과 </h3>
      <hr style="margin-left: 15px;">
      <% if (results.length === 0) { %>
        <p>검색 결과가 없습니다.</p>
      <% } else { %>
          <% results.forEach(function(event) { %>
            <div class="col-xl-12 col-lg-11">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col-xl-12 col-md-6"> <!-- 너비 조정 -->
                                <div class="text-xl text-primary text-uppercase mb-1 font-weight-bold"> <!-- bold와 font-weight-bold 클래스 제거 -->
                                    <%= event.msche_title %>
                                </div>
                                <div class="h6 mb-0 text-gray-800">시작날짜 : <%= event.msche_st_dt %> </div> <!-- h5 대신 h6로 변경 -->
                                <div class="h6 mb-0 text-gray-800">종료날짜 : <%= event.msche_ed_dt %></div> <!-- h5 대신 h6로 변경 -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>                      
          <% }) %>
      <% } %>
    </div>


  </div>

    </div>

    
</div>